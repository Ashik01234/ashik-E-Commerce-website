<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Payment Successful</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container mt-5">
  <div class="bg-white p-4 rounded shadow-sm">
    <h2 class="text-success mb-3">âœ… Payment Successful</h2>
    <p class="mb-1"><strong>Order Number:</strong> <%= order_number %></p>
    <p class="mb-3"><strong>Payment ID:</strong> <%= payment_id %></p>

    <h5 class="mt-4">Purchased Items</h5>
    <div class="table-responsive">
      <table class="table table-bordered align-middle">
        <thead class="table-light">
          <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
          </tr>
        </thead>
        <tbody>
          <% let total = 0; %>
          <% items.forEach(item => { 
              const subtotal = item.product_price * item.quantity;
              total += subtotal;
          %>
            <tr>
              <td><%= item.product_name %></td>
              <td><%= item.quantity %></td>
              <td>â‚¹<%= Number(item.product_price).toFixed(2) %></td>
              <td>â‚¹<%= subtotal.toFixed(2) %></td>
            </tr>
          <% }) %>
          <tr class="fw-bold">
            <td colspan="3" class="text-end">Total</td>
            <td>â‚¹<%= total.toFixed(2) %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="mt-3">
      <a href="/my-orders" class="btn btn-primary me-2">ðŸ“¦ View My Orders</a>
      <a href="/" class="btn btn-outline-secondary">Continue Shopping</a>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
