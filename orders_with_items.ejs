<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Orders</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .order-products img {
      width: 50px;
      height: 50px;
      object-fit: cover;
      border-radius: 5px;
    }
    .collapse-row {
      background-color: #f9f9f9;
    }
  </style>
</head>
<body class="bg-light">
<div class="container mt-5">
  <h2 class="mb-4 text-center">ðŸ“¦ My Orders</h2>

  <% if (orders.length === 0) { %>
    <div class="alert alert-info text-center">You have no orders yet.</div>
  <% } else { %>
    <div class="table-responsive shadow-sm rounded">
      <table class="table table-bordered align-middle">
        <thead class="table-dark text-center">
          <tr>
            <th>Order #</th>
            <th>Date</th>
            <th>Customer</th>
            <th>Payment</th>
            <th>Status</th>
            <th>Total</th>
            <th>Products</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach((order, index) => { %>
            <tr class="text-center">
              <td><strong><%= order.user_order_number %></strong></td>
              <td><%= new Date(order.order_date).toLocaleString() %></td>
              <td><%= order.customer_name %></td>
              <td><%= order.payment_method %></td>
              <td>
                <span class="badge 
                  <%= order.status === 'Processing' ? 'bg-warning text-dark' : 
                      order.status === 'Shipped' ? 'bg-info text-dark' : 
                      order.status === 'Delivered' ? 'bg-success' : 'bg-secondary' %>">
                  <%= order.status %>
                </span>
              </td>
              <td>â‚¹<%= order.total_amount.toFixed(2) %></td>
              <td>
                <button class="btn btn-sm btn-outline-primary" 
                        data-bs-toggle="collapse" 
                        data-bs-target="#products-<%= index %>">
                  View
                </button>
              </td>
            </tr>
            <tr class="collapse-row">
              <td colspan="7" class="p-0">
                <div id="products-<%= index %>" class="collapse">
                  <table class="table mb-0 order-products">
                    <thead class="table-light">
                      <tr>
                        <th>Image</th>
                        <th>Product</th>
                        <th>Qty</th>
                        <th>Price</th>
                        <th>Line Total</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% order.products.forEach(product => { %>
                        <tr>
                          <td><img src="<%= product.image %>" alt="<%= product.name %>"></td>
                          <td><%= product.name %></td>
                          <td><%= product.quantity %></td>
                          <td>â‚¹<%= product.price.toFixed(2) %></td>
                          <td>â‚¹<%= product.line_total.toFixed(2) %></td>
                        </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>

  <div class="text-center mt-4">
    <a href="/" class="btn btn-primary btn-lg">ðŸ›’ Continue Shopping</a>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
